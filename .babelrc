{
  "plugins": [
    "transform-class-properties",
    "transform-decorators-legacy",
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "app": "./app"
        }
      }
    ]
  ],
  "env": {
    "test": {
      "presets": [
        [
          "env",
          {
            "targets": {
              "node": "current"
            },
            "loose": true
          }
        ]
      ]
    },
    "cjs": {
      "presets": [
        [
          "env",
          {
            "targets": {
              "node": "current"
            },
            "loose": true
          }
        ]
      ]
    },
    "es": {
      "presets": [
        [
          "env",
          {
            "targets": {
              "node": "current"
            },
            "loose": true,
            "modules": false
          }
        ]
      ]
    }
  }
}
